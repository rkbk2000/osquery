load("//tools/build_defs/oss/osquery:cxx.bzl", "osquery_cxx_library")
load("//tools/build_defs/oss/osquery:native.bzl", "osquery_target", "osquery_version")

osquery_cxx_library(
    name = "info",
    srcs = [
        "platform_type.cpp",
        "tool_type.cpp",
        "version.cpp",
    ],
    header_namespace = "osquery/utils/info",
    exported_headers = [
        "platform_type.h",
        "tool_type.h",
        "version.h",
    ],
    exported_preprocessor_flags = [
        "-DOSQUERY_VERSION={}".format(osquery_version()),
        "-DOSQUERY_BUILD_VERSION={}".format(osquery_version()),
        "-DOSQUERY_BUILD_SDK_VERSION={}".format(osquery_version()),
    ],
    visibility = ["PUBLIC"],
    deps = [
        osquery_target("osquery/utils/conversions:conversions"),
        osquery_target("osquery/utils/macros:macros"),
    ],
)
